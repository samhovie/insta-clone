#!/bin/bash
#
# ./bin/makesubmit

# Stop on errors, print commands
# See https://vaneyckt.io/posts/safer_bash_scripts_with_set_euxo_pipefail/
set -Eeuo pipefail

SHELL_NAME="$(uname -s)"
if [ "$SHELL_NAME" = 'Darwin' ]; then
  tar \
    --disable-copyfile \
    --exclude '*__pycache__*' \
    -czvf submit.tar.gz \
    bin \
    insta485 \
    package-lock.json \
    package.json \
    setup.py sql \
    webpack.config.js \
    deployed_index.html \
    deployed_index.log \
    deployed_bundle.js \
    deployed_bundle.log
else
  tar \
    --exclude '*__pycache__*' \
    -czvf submit.tar.gz \
    bin \
    insta485 \
    package-lock.json \
    package.json \
    setup.py sql \
    webpack.config.js \
    deployed_index.html \
    deployed_index.log \
    deployed_bundle.js \
    deployed_bundle.log
fi
